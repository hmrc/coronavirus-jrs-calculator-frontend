#!/bin/bash

echo ""
echo "Applying migration PaymentFrequency"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /paymentFrequency                        controllers.PaymentFrequencyController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /paymentFrequency                        controllers.PaymentFrequencyController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changePaymentFrequency                  controllers.PaymentFrequencyController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changePaymentFrequency                  controllers.PaymentFrequencyController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "paymentFrequency.title = How often do you pay this employee?" >> ../conf/messages.en
echo "paymentFrequency.heading = How often do you pay this employee?" >> ../conf/messages.en
echo "paymentFrequency.weekly = Weekly" >> ../conf/messages.en
echo "paymentFrequency.fortnightly = Every 2 weeks" >> ../conf/messages.en
echo "paymentFrequency.checkYourAnswersLabel = How often do you pay this employee?" >> ../conf/messages.en
echo "paymentFrequency.error.required = Select paymentFrequency" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPaymentFrequencyUserAnswersEntry: Arbitrary[(PaymentFrequencyPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[PaymentFrequencyPage.type]";\
    print "        value <- arbitrary[PaymentFrequency].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPaymentFrequencyPage: Arbitrary[PaymentFrequencyPage.type] =";\
    print "    Arbitrary(PaymentFrequencyPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to ModelGenerators"
awk '/trait ModelGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPaymentFrequency: Arbitrary[PaymentFrequency] =";\
    print "    Arbitrary {";\
    print "      Gen.oneOf(PaymentFrequency.values.toSeq)";\
    print "    }";\
    next }1' ../test/generators/ModelGenerators.scala > tmp && mv tmp ../test/generators/ModelGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(PaymentFrequencyPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration PaymentFrequency completed"
