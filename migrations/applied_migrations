#!/bin/bash

echo ""
echo "Applying migration PartTimeHours"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /partTimeHours                        controllers.PartTimeHoursController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /partTimeHours                        controllers.PartTimeHoursController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changePartTimeHours                  controllers.PartTimeHoursController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changePartTimeHours                  controllers.PartTimeHoursController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "partTimeHours.title = partTimeHours" >> ../conf/messages.en
echo "partTimeHours.heading = partTimeHours" >> ../conf/messages.en
echo "partTimeHours.xxxx = xxxx" >> ../conf/messages.en
echo "partTimeHours.xxxxx = xxxxx" >> ../conf/messages.en
echo "partTimeHours.checkYourAnswersLabel = partTimeHours" >> ../conf/messages.en
echo "partTimeHours.error.xxxx.required = Enter xxxx" >> ../conf/messages.en
echo "partTimeHours.error.xxxxx.required = Enter xxxxx" >> ../conf/messages.en
echo "partTimeHours.error.xxxx.length = xxxx must be xxxxx characters or less" >> ../conf/messages.en
echo "partTimeHours.error.xxxxx.length = xxxxx must be xxxxx characters or less" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPartTimeHoursUserAnswersEntry: Arbitrary[(PartTimeHoursPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[PartTimeHoursPage.type]";\
    print "        value <- arbitrary[PartTimeHours].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPartTimeHoursPage: Arbitrary[PartTimeHoursPage.type] =";\
    print "    Arbitrary(PartTimeHoursPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to ModelGenerators"
awk '/trait ModelGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPartTimeHours: Arbitrary[PartTimeHours] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        xxxx <- arbitrary[String]";\
    print "        xxxxx <- arbitrary[String]";\
    print "      } yield PartTimeHours(xxxx, xxxxx)";\
    print "    }";\
    next }1' ../test/generators/ModelGenerators.scala > tmp && mv tmp ../test/generators/ModelGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(PartTimeHoursPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration PartTimeHours completed"
