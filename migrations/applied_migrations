#!/bin/bash

echo ""
echo "Applying migration EmployeeFirstFurloughed"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /employeeFirstFurloughed                  controllers.EmployeeFirstFurloughedController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /employeeFirstFurloughed                  controllers.EmployeeFirstFurloughedController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changeEmployeeFirstFurloughed                        controllers.EmployeeFirstFurloughedController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changeEmployeeFirstFurloughed                        controllers.EmployeeFirstFurloughedController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "employeeFirstFurloughed.title = EmployeeFirstFurloughed" >> ../conf/messages.en
echo "employeeFirstFurloughed.heading = EmployeeFirstFurloughed" >> ../conf/messages.en
echo "employeeFirstFurloughed.checkYourAnswersLabel = EmployeeFirstFurloughed" >> ../conf/messages.en
echo "employeeFirstFurloughed.error.required.all = Enter the employeeFirstFurloughed" >> ../conf/messages.en
echo "employeeFirstFurloughed.error.required.two = The employeeFirstFurloughed" must include {0} and {1} >> ../conf/messages.en
echo "employeeFirstFurloughed.error.required = The employeeFirstFurloughed must include {0}" >> ../conf/messages.en
echo "employeeFirstFurloughed.error.invalid = Enter a real EmployeeFirstFurloughed" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryEmployeeFirstFurloughedUserAnswersEntry: Arbitrary[(EmployeeFirstFurloughedPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[EmployeeFirstFurloughedPage.type]";\
    print "        value <- arbitrary[Int].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryEmployeeFirstFurloughedPage: Arbitrary[EmployeeFirstFurloughedPage.type] =";\
    print "    Arbitrary(EmployeeFirstFurloughedPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(EmployeeFirstFurloughedPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration EmployeeFirstFurloughed completed"
