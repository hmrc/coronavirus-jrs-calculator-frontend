#!/bin/bash

echo ""
echo "Applying migration VariableLengthPartialPay"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /variableLengthPartialPay                        controllers.VariableLengthPartialPayController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /variableLengthPartialPay                        controllers.VariableLengthPartialPayController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changeVariableLengthPartialPay                  controllers.VariableLengthPartialPayController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changeVariableLengthPartialPay                  controllers.VariableLengthPartialPayController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "variableLengthPartialPay.title = variableLengthPartialPay" >> ../conf/messages.en
echo "variableLengthPartialPay.heading = variableLengthPartialPay" >> ../conf/messages.en
echo "variableLengthPartialPay.checkYourAnswersLabel = variableLengthPartialPay" >> ../conf/messages.en
echo "variableLengthPartialPay.error.required = Enter variableLengthPartialPay" >> ../conf/messages.en
echo "variableLengthPartialPay.error.length = VariableLengthPartialPay must be 100 characters or less" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryVariableLengthPartialPayUserAnswersEntry: Arbitrary[(VariableLengthPartialPayPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[VariableLengthPartialPayPage.type]";\
    print "        value <- arbitrary[String].suchThat(_.nonEmpty).map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryVariableLengthPartialPayPage: Arbitrary[VariableLengthPartialPayPage.type] =";\
    print "    Arbitrary(VariableLengthPartialPayPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(VariableLengthPartialPayPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration VariableLengthPartialPay completed"
