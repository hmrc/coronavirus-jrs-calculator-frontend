#!/bin/bash

echo ""
echo "Applying migration EmployeeStartDate"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /employeeStartDate                  controllers.EmployeeStartDateController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /employeeStartDate                  controllers.EmployeeStartDateController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changeEmployeeStartDate                        controllers.EmployeeStartDateController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changeEmployeeStartDate                        controllers.EmployeeStartDateController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "employeeStartDate.title = EmployeeStartDate" >> ../conf/messages.en
echo "employeeStartDate.heading = EmployeeStartDate" >> ../conf/messages.en
echo "employeeStartDate.checkYourAnswersLabel = EmployeeStartDate" >> ../conf/messages.en
echo "employeeStartDate.error.required.all = Enter the employeeStartDate" >> ../conf/messages.en
echo "employeeStartDate.error.required.two = The employeeStartDate" must include {0} and {1} >> ../conf/messages.en
echo "employeeStartDate.error.required = The employeeStartDate must include {0}" >> ../conf/messages.en
echo "employeeStartDate.error.invalid = Enter a real EmployeeStartDate" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryEmployeeStartDateUserAnswersEntry: Arbitrary[(EmployeeStartDatePage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[EmployeeStartDatePage.type]";\
    print "        value <- arbitrary[Int].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryEmployeeStartDatePage: Arbitrary[EmployeeStartDatePage.type] =";\
    print "    Arbitrary(EmployeeStartDatePage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(EmployeeStartDatePage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration EmployeeStartDate completed"
