#!/bin/bash

echo ""
echo "Applying migration VariableGrossPay"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /variableGrossPay                        controllers.VariableGrossPayController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /variableGrossPay                        controllers.VariableGrossPayController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changeVariableGrossPay                  controllers.VariableGrossPayController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changeVariableGrossPay                  controllers.VariableGrossPayController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "variableGrossPay.title = variableGrossPay" >> ../conf/messages.en
echo "variableGrossPay.heading = variableGrossPay" >> ../conf/messages.en
echo "variableGrossPay.checkYourAnswersLabel = variableGrossPay" >> ../conf/messages.en
echo "variableGrossPay.error.required = Enter variableGrossPay" >> ../conf/messages.en
echo "variableGrossPay.error.length = VariableGrossPay must be 40 characters or less" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryVariableGrossPayUserAnswersEntry: Arbitrary[(VariableGrossPayPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[VariableGrossPayPage.type]";\
    print "        value <- arbitrary[String].suchThat(_.nonEmpty).map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryVariableGrossPayPage: Arbitrary[VariableGrossPayPage.type] =";\
    print "    Arbitrary(VariableGrossPayPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(VariableGrossPayPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration VariableGrossPay completed"
