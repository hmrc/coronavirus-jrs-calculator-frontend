#!/bin/bash

echo ""
echo "Applying migration StatutoryLeavePay"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /statutoryLeavePay                  controllers.StatutoryLeavePayController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /statutoryLeavePay                  controllers.StatutoryLeavePayController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changeStatutoryLeavePay                        controllers.StatutoryLeavePayController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changeStatutoryLeavePay                        controllers.StatutoryLeavePayController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "statutoryLeavePay.title = StatutoryLeavePay" >> ../conf/messages.en
echo "statutoryLeavePay.heading = StatutoryLeavePay" >> ../conf/messages.en
echo "statutoryLeavePay.checkYourAnswersLabel = StatutoryLeavePay" >> ../conf/messages.en
echo "statutoryLeavePay.error.nonNumeric = Enter your statutoryLeavePay using numbers" >> ../conf/messages.en
echo "statutoryLeavePay.error.required = Enter your statutoryLeavePay" >> ../conf/messages.en
echo "statutoryLeavePay.error.wholeNumber = Enter your statutoryLeavePay using whole numbers" >> ../conf/messages.en
echo "statutoryLeavePay.error.outOfRange = StatutoryLeavePay must be between {0} and {1}" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryStatutoryLeavePayUserAnswersEntry: Arbitrary[(StatutoryLeavePayPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[StatutoryLeavePayPage.type]";\
    print "        value <- arbitrary[Int].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryStatutoryLeavePayPage: Arbitrary[StatutoryLeavePayPage.type] =";\
    print "    Arbitrary(StatutoryLeavePayPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(StatutoryLeavePayPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration StatutoryLeavePay completed"
