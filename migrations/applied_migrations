#!/bin/bash

echo ""
echo "Applying migration FurloughCalculations"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /furloughCalculations                        controllers.FurloughCalculationsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /furloughCalculations                        controllers.FurloughCalculationsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changeFurloughCalculations                  controllers.FurloughCalculationsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changeFurloughCalculations                  controllers.FurloughCalculationsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "furloughCalculations.title = Gross furlough amount breakdown" >> ../conf/messages.en
echo "furloughCalculations.heading = Gross furlough amount breakdown" >> ../conf/messages.en
echo "furloughCalculations.yes = Yes" >> ../conf/messages.en
echo "furloughCalculations.no = No" >> ../conf/messages.en
echo "furloughCalculations.checkYourAnswersLabel = Gross furlough amount breakdown" >> ../conf/messages.en
echo "furloughCalculations.error.required = Select furloughCalculations" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryFurloughCalculationsUserAnswersEntry: Arbitrary[(FurloughCalculationsPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[FurloughCalculationsPage.type]";\
    print "        value <- arbitrary[FurloughCalculations].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryFurloughCalculationsPage: Arbitrary[FurloughCalculationsPage.type] =";\
    print "    Arbitrary(FurloughCalculationsPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to ModelGenerators"
awk '/trait ModelGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryFurloughCalculations: Arbitrary[FurloughCalculations] =";\
    print "    Arbitrary {";\
    print "      Gen.oneOf(FurloughCalculations.values.toSeq)";\
    print "    }";\
    next }1' ../test/generators/ModelGenerators.scala > tmp && mv tmp ../test/generators/ModelGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(FurloughCalculationsPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration FurloughCalculations completed"
