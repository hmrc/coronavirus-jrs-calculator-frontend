#!/bin/bash

echo ""
echo "Applying migration PreviousFurloughPeriods"

echo "Adding routes to conf/app.routes"

echo "" >> ../conf/app.routes
echo "GET        /previousFurloughPeriods                        controllers.PreviousFurloughPeriodsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/app.routes
echo "POST       /previousFurloughPeriods                        controllers.PreviousFurloughPeriodsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/app.routes

echo "GET        /changePreviousFurloughPeriods                  controllers.PreviousFurloughPeriodsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/app.routes
echo "POST       /changePreviousFurloughPeriods                  controllers.PreviousFurloughPeriodsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "previousFurloughPeriods.title = previousFurloughPeriods" >> ../conf/messages.en
echo "previousFurloughPeriods.heading = previousFurloughPeriods" >> ../conf/messages.en
echo "previousFurloughPeriods.checkYourAnswersLabel = previousFurloughPeriods" >> ../conf/messages.en
echo "previousFurloughPeriods.error.required = Select yes if previousFurloughPeriods" >> ../conf/messages.en

echo "Adding to UserAnswersEntryGenerators"
awk '/trait UserAnswersEntryGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPreviousFurloughPeriodsUserAnswersEntry: Arbitrary[(PreviousFurloughPeriodsPage.type, JsValue)] =";\
    print "    Arbitrary {";\
    print "      for {";\
    print "        page  <- arbitrary[PreviousFurloughPeriodsPage.type]";\
    print "        value <- arbitrary[Boolean].map(Json.toJson(_))";\
    print "      } yield (page, value)";\
    print "    }";\
    next }1' ../test/generators/UserAnswersEntryGenerators.scala > tmp && mv tmp ../test/generators/UserAnswersEntryGenerators.scala

echo "Adding to PageGenerators"
awk '/trait PageGenerators/ {\
    print;\
    print "";\
    print "  implicit lazy val arbitraryPreviousFurloughPeriodsPage: Arbitrary[PreviousFurloughPeriodsPage.type] =";\
    print "    Arbitrary(PreviousFurloughPeriodsPage)";\
    next }1' ../test/generators/PageGenerators.scala > tmp && mv tmp ../test/generators/PageGenerators.scala

echo "Adding to UserAnswersGenerator"
awk '/val generators/ {\
    print;\
    print "    arbitrary[(PreviousFurloughPeriodsPage.type, JsValue)] ::";\
    next }1' ../test/generators/UserAnswersGenerator.scala > tmp && mv tmp ../test/generators/UserAnswersGenerator.scala

echo "Migration PreviousFurloughPeriods completed"
